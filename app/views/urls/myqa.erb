<html >
	<head >
		<link rel='stylesheet prefetch' href='http://fonts.googleapis.com/css?family=Roboto+Slab'>

		<link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>

		<title>Quora</title>


		<link href="/css/inner.css" rel="stylesheet" type="text/css">
		<script src="/js/jquery-1.12.3.min.js"></script>
		<script type="text/javascript"  src ="/js/application.js"></script>
	</head>

Â 

	<body>
		
	

		<ul>
			  <li style="float:left"><a  class="active" href="/home">QUORA?</a></li>
			    <li style = "float:left">

				<form  method="post" action="/ask">
				    <input taborder="1" type="text" class="enter-ques" placeholder="enter a question" name="text" > 
				    <input type=submit value="Ask" id='ask-button'>
				</form>



			  </li>
			  <!-- <li><a href="/urls/askpage">ASK</a></li> -->
			  


			  <% if session[:user_id] == nil %>
			  <% @status = "LOGIN" %>
			  <% else %>
			  <% @status = "LOGOUT" %>

			  <% end%>
			  <li><a href="/<%= @status.downcase %>"><%= @status%></a></li>
			  <li><a href="/urls/profile/<%=session[:user_id] %>"> PROFILE</a></li>
			</ul>

		<br>

		<p3> Questions</p3>
		<% Question.all.each do |ques| %>
		<br>
			<% if ques.user_id.to_i == session[:user_id].to_i%>
				<%= ques.text %> 
			<% end %>

	     <% end %>

	     <br>
	     <br>

	     <p4> Answers </p4>
	     <% Answer.all.each do |ans| %>
	       
			<% if ans.user_id.to_i == session[:user_id].to_i %>
				<div><%= ans.text %> 
				</div>
			<% end %>

		<% end %>
			
	  

	</body>
</html>










